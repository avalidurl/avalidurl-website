# üîê ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Site Configuration (Required)
SITE_URL=https://yourdomain.com
SITE_NAME=Your Site Name
SITE_DESCRIPTION=Your site description

# Contact Information (Optional)
CONTACT_EMAIL=your_email@example.com
GITHUB_USERNAME=your_github_username
TWITTER_HANDLE=@yourusername

# Development Settings
NODE_ENV=development
ASTRO_TELEMETRY_DISABLED=1

# Build Configuration
BUILD_PATH=./dist
PUBLIC_PATH=/

# Cloudflare API (Optional - only if using Cloudflare for deployment)
# Generate your token at: https://dash.cloudflare.com/profile/api-tokens
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# PLAUSIBLE_DOMAIN=yourdomain.com

# Security Headers
CSP_REPORT_URI=https://yoursite.dev/csp-report
HSTS_MAX_AGE=31536000

# Tina CMS Configuration
# Get these values from https://app.tina.io after creating your project
NEXT_PUBLIC_TINA_CLIENT_ID=your_client_id_here
TINA_TOKEN=your_token_here
TINA_SEARCH_TOKEN=your_search_token_here

# Optional: Branch override for Tina
TINA_BRANCH=main
GITHUB_BRANCH=main
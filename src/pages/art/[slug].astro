---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const artworks = await getCollection('art');
  
  return artworks.map((artwork) => ({
    params: { slug: artwork.slug },
    props: { artwork },
  }));
}

interface Props {
  artwork: CollectionEntry<'art'>;
}

const { artwork } = Astro.props;
const { Content } = await artwork.render();

const formattedDate = new Date(artwork.data.createdDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Helper function to get color theme classes
function getColorThemeClass(theme: string) {
  switch(theme) {
    case 'red': return 'theme-red';
    case 'green': return 'theme-green';
    case 'blue': return 'theme-blue';
    default: return 'theme-neutral';
  }
}
---

<Layout title={artwork.data.title} description={artwork.data.description}>
  <main class="container">
    <article class={`artwork-detail ${getColorThemeClass(artwork.data.colorTheme)}`}>
      <header class="artwork-header">
        <div class="artwork-meta">
          <span class="artwork-category">{artwork.data.category}</span>
          <time class="artwork-date" datetime={artwork.data.createdDate.toISOString()}>
            {formattedDate}
          </time>
          {artwork.data.available && artwork.data.price && (
            <span class="artwork-price">{artwork.data.price}</span>
          )}
        </div>
        
        <h1 class="artwork-title">{artwork.data.title}</h1>
        
        <p class="artwork-description">{artwork.data.description}</p>
        
        <div class="artwork-details">
          <div class="detail-grid">
            <div class="detail-item">
              <span class="detail-label">Medium</span>
              <span class="detail-value">{artwork.data.medium}</span>
            </div>
            {artwork.data.dimensions && (
              <div class="detail-item">
                <span class="detail-label">Dimensions</span>
                <span class="detail-value">{artwork.data.dimensions}</span>
              </div>
            )}
            {artwork.data.edition && (
              <div class="detail-item">
                <span class="detail-label">Edition</span>
                <span class="detail-value">{artwork.data.edition}</span>
              </div>
            )}
          </div>
        </div>
        
        {artwork.data.tools.length > 0 && (
          <div class="artwork-tools">
            <h3>Tools & Technologies</h3>
            <div class="tools-grid">
              {artwork.data.tools.map(tool => (
                <span class="tool-tag">{tool}</span>
              ))}
            </div>
          </div>
        )}
      </header>
      
      <div class="artwork-content">
        <Content />
      </div>
      
      {artwork.data.inspiration && (
        <div class="artwork-inspiration">
          <h3>Inspiration</h3>
          <p>{artwork.data.inspiration}</p>
        </div>
      )}
      
      {artwork.data.process && (
        <div class="artwork-process">
          <h3>Creative Process</h3>
          <p>{artwork.data.process}</p>
        </div>
      )}
      
      <footer class="artwork-footer">
        <div class="artwork-actions">
          <a href="/art" class="back-to-gallery">‚Üê Back to Gallery</a>
          {artwork.data.available && artwork.data.price && (
            <div class="purchase-info">
              <span class="price">{artwork.data.price}</span>
              <a href="#contact" class="inquire-button">Inquire</a>
            </div>
          )}
        </div>
      </footer>
    </article>
    
    <aside class="artwork-sidebar">
      <div class="related-works">
        <h3>More Explorations</h3>
        <div class="sidebar-links">
          <a href="/art/market-emotions-live" class="sidebar-link">
            <span class="link-title">Live Market Emotions</span>
            <span class="link-desc">Interactive visualization</span>
          </a>
          <a href="/blog" class="sidebar-link">
            <span class="link-title">Journal</span>
            <span class="link-desc">Writing on finance & art</span>
          </a>
          <a href="/" class="sidebar-link">
            <span class="link-title">Financial Tools</span>
            <span class="link-desc">Live market trackers</span>
          </a>
        </div>
      </div>
    </aside>
  </main>
</Layout>

<style>
  .artwork-detail {
    max-width: 900px;
    margin: 0 auto;
    background: var(--bg-card);
    padding: 3rem;
    border: 1px solid var(--border-light);
    margin-bottom: 3rem;
    position: relative;
  }
  
  .artwork-detail::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 6px;
    height: 100%;
  }
  
  .theme-red::before {
    background: linear-gradient(180deg, #ffebee, #ffcdd2, #ef5350);
  }
  
  .theme-green::before {
    background: linear-gradient(180deg, #e8f5e8, #c8e6c9, #66bb6a);
  }
  
  .theme-blue::before {
    background: linear-gradient(180deg, #e3f2fd, #bbdefb, #42a5f5);
  }
  
  .theme-neutral::before {
    background: var(--accent-primary);
  }
  
  .artwork-header {
    border-bottom: 1px solid var(--border-light);
    padding-bottom: 2rem;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .artwork-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 80px;
    height: 1px;
    background: var(--accent-primary);
  }
  
  .artwork-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    flex-wrap: wrap;
  }
  
  .artwork-category {
    background: var(--text-secondary);
    color: var(--text-on-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-weight: 600;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    font-size: 0.75rem;
  }
  
  .theme-red .artwork-category {
    background: #d32f2f;
  }
  
  .theme-green .artwork-category {
    background: #388e3c;
  }
  
  .theme-blue .artwork-category {
    background: #1976d2;
  }
  
  .artwork-date {
    color: var(--text-muted);
    font-weight: 500;
    font-family: 'Georgia', serif;
  }
  
  .artwork-price {
    color: var(--accent-primary);
    font-weight: 600;
    background: var(--bg-accent);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    margin-left: auto;
  }
  
  .artwork-title {
    font-size: 2.5rem;
    line-height: 1.2;
    color: var(--text-primary);
    font-family: 'Georgia', serif;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.5px;
  }
  
  .artwork-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
    font-style: italic;
  }
  
  .artwork-details {
    margin-bottom: 2rem;
  }
  
  .detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    background: var(--bg-accent);
    border: 1px solid var(--border-light);
    border-radius: 6px;
  }
  
  .detail-label {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }
  
  .detail-value {
    color: var(--text-primary);
    font-weight: 500;
  }
  
  .artwork-tools {
    margin-bottom: 2rem;
  }
  
  .artwork-tools h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.3px;
    text-transform: uppercase;
  }
  
  .tools-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tool-tag {
    background: var(--bg-accent);
    color: var(--text-secondary);
    border: 1px solid var(--border-light);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .tool-tag:hover {
    background: var(--accent-primary);
    color: var(--text-on-dark);
    border-color: var(--accent-primary);
  }
  
  .artwork-content {
    line-height: 1.8;
    color: var(--text-primary);
    margin-bottom: 3rem;
  }
  
  .artwork-content h2 {
    font-family: 'Georgia', serif;
    color: var(--text-primary);
    font-size: 1.75rem;
    margin: 2.5rem 0 1rem 0;
    font-weight: 600;
  }
  
  .artwork-content h3 {
    font-family: 'Georgia', serif;
    color: var(--text-secondary);
    font-size: 1.375rem;
    margin: 2rem 0 0.75rem 0;
    font-weight: 600;
  }
  
  .artwork-content p {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }
  
  .artwork-content ul {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }
  
  .artwork-content li {
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }
  
  .artwork-inspiration,
  .artwork-process {
    background: var(--bg-accent);
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  
  .artwork-inspiration h3,
  .artwork-process h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-family: 'Georgia', serif;
  }
  
  .artwork-inspiration p,
  .artwork-process p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }
  
  .artwork-footer {
    border-top: 1px solid var(--border-light);
    padding-top: 2rem;
    margin-top: 3rem;
  }
  
  .artwork-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .back-to-gallery {
    color: var(--accent-primary);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .back-to-gallery:hover {
    color: var(--accent-secondary);
    border-bottom: none;
  }
  
  .purchase-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .price {
    color: var(--accent-primary);
    font-size: 1.125rem;
    font-weight: 600;
  }
  
  .inquire-button {
    background: var(--accent-primary);
    color: var(--text-on-dark);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 600;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  
  .inquire-button:hover {
    background: var(--accent-secondary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
  }
  
  .artwork-sidebar {
    max-width: 400px;
    margin: 0 auto;
  }
  
  .related-works {
    background: var(--bg-accent);
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
  }
  
  .related-works h3 {
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-family: 'Georgia', serif;
  }
  
  .sidebar-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .sidebar-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .sidebar-link:hover {
    border-color: var(--accent-primary);
    transform: translateY(-1px);
  }
  
  .link-title {
    color: var(--text-primary);
    font-weight: 600;
  }
  
  .link-desc {
    color: var(--text-muted);
    font-size: 0.875rem;
  }
  
  @media (max-width: 768px) {
    .artwork-detail {
      padding: 2rem 1.5rem;
    }
    
    .artwork-title {
      font-size: 2rem;
    }
    
    .artwork-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .artwork-price {
      margin-left: 0;
    }
    
    .artwork-actions {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .detail-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
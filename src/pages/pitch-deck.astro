    </div>
  </div>

  <!-- Navigation -->
  <div class="navigation">
    <button id="prevBtn" class="nav-btn">‚Üê Previous</button>
    <span id="slideCounter" class="slide-counter">1 / 9</span>
    <button id="nextBtn" class="nav-btn">Next ‚Üí</button>
    <button class="pdf-export-btn" onclick="exportToPDF()">üìÑ Export PDF</button>
  </div>

</Layout>

<style>
  /* Reset and base styles */
  .pitch-deck {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    min-height: 100vh;
    color: #1a202c;
    line-height: 1.6;
  }

  .slides-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .slide {
    display: none;
    min-height: 80vh;
    padding: 3rem 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;
  }

  .slide.active {
    display: block;
  }

  .slide-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Title slide */
  .title-slide {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .title-slide h1 {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .title-slide h2 {
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .tagline {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    opacity: 0.8;
  }

  .live-demo-btn {
    display: inline-block;
    background: #48bb78;
    color: white;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
  }

  .live-demo-btn:hover {
    background: #38a169;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(72, 187, 120, 0.4);
  }

  .presenter-info {
    margin-top: 2rem;
    font-size: 1.1rem;
    opacity: 0.7;
  }

  /* Typography */
  h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 2rem;
    text-align: center;
  }

  h3 {
    font-size: 1.8rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 1rem;
  }

  h4 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1.1rem;
    color: #4a5568;
    margin-bottom: 1rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    font-size: 1.1rem;
    color: #4a5568;
    margin-bottom: 0.8rem;
    padding-left: 0;
  }

  /* Problem grid */
  .problem-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .problem-item {
    background: #f7fafc;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .problem-item:hover {
    border-color: #667eea;
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .problem-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .market-pain {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .market-pain h3 {
    color: white;
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .market-pain p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
  }

  /* Solution showcase */
  .solution-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .demo-placeholder {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .particle-animation {
    position: relative;
    height: 200px;
    margin-bottom: 1rem;
  }

  .particle {
    position: absolute;
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: float 3s ease-in-out infinite;
  }

  .particle.p1 { top: 20%; left: 20%; animation-delay: 0s; }
  .particle.p2 { top: 60%; left: 70%; animation-delay: 1s; }
  .particle.p3 { top: 80%; left: 30%; animation-delay: 2s; }
  .particle.p4 { top: 40%; left: 80%; animation-delay: 1.5s; }

  @keyframes float {
    0%, 100% { transform: translateY(0px) scale(1); opacity: 0.7; }
    50% { transform: translateY(-20px) scale(1.2); opacity: 1; }
  }

  .demo-link {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .demo-link:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  .solution-features li {
    background: #f0fff4;
    padding: 0.8rem 1rem;
    margin-bottom: 0.8rem;
    border-radius: 6px;
    border-left: 4px solid #48bb78;
  }

  .tech-badge {
    display: inline-block;
    background: #667eea;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Market analysis */
  .market-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .market-stat {
    text-align: center;
    background: #f7fafc;
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
  }

  .market-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 0.5rem;
  }

  .market-label {
    font-size: 1.1rem;
    color: #4a5568;
    font-weight: 600;
  }

  .market-trends {
    background: #f0fff4;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #48bb78;
  }

  /* Business model */
  .revenue-item {
    background: #f7fafc;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .revenue-item:hover {
    border-color: #667eea;
    transform: translateX(4px);
  }

  .revenue-amount {
    display: block;
    font-weight: 700;
    color: #667eea;
    font-size: 1.2rem;
    margin-top: 0.5rem;
  }

  /* Projections */
  .projection-timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .projection-year {
    text-align: center;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 2rem;
    border-radius: 12px;
  }

  .projection-revenue {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    margin: 1rem 0;
  }

  .key-metrics {
    background: #f0fff4;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #48bb78;
  }

  /* Tech overview */
  .tech-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .tech-category {
    background: #f7fafc;
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
  }

  .tech-category h3 {
    color: #667eea;
    border-bottom: 2px solid #667eea;
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
  }

  /* Investment ask */
  .ask-amount {
    text-align: center;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 3rem;
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .ask-amount h3 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .ask-amount p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.3rem;
  }

  .funds-breakdown {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .fund-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: #f7fafc;
    padding: 1rem;
    border-radius: 8px;
    border: 2px solid #e2e8f0;
  }

  .fund-percentage {
    font-size: 1.5rem;
    font-weight: 700;
    color: #667eea;
    min-width: 50px;
  }

  .investor-benefits {
    background: #f0fff4;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #48bb78;
  }

  /* Thank you slide */
  .thank-you-slide {
    text-align: center;
  }

  .contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin: 3rem 0;
  }

  .contact-item {
    background: #f7fafc;
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
  }

  .final-demo-btn, .roadmap-btn {
    display: block;
    background: #667eea;
    color: white;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    margin: 1rem 0;
    transition: all 0.3s ease;
  }

  .final-demo-btn:hover, .roadmap-btn:hover {
    background: #5a67d8;
    transform: translateY(-2px);
  }

  .closing-message {
    margin-top: 3rem;
    font-style: italic;
    color: #667eea;
    font-size: 1.3rem;
  }

  /* Navigation */
  .navigation {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    background: white;
    padding: 1rem 2rem;
    border-radius: 50px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 1000;
  }

  .nav-btn {
    background: #667eea;
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 25px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .nav-btn:hover {
    background: #5a67d8;
    transform: translateY(-2px);
  }

  .nav-btn:disabled {
    background: #cbd5e0;
    cursor: not-allowed;
    transform: none;
  }

  .slide-counter {
    font-weight: 600;
    color: #4a5568;
    min-width: 60px;
    text-align: center;

      <!-- Problem Statement -->
      <section class="slide">
        <div class="slide-content">
          <h2>The Problem</h2>
          <div class="problem-grid">
            <div class="problem-item">
              <div class="problem-icon">üìä</div>
              <h3>Financial Data is Boring</h3>
              <p>Traditional charts and spreadsheets fail to engage users and reveal deeper market insights</p>

<script>
  // Wait for page load then initialize Reveal.js
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Reveal.js
    Reveal.initialize({
      hash: true,
      controls: true,
      progress: true,
      history: true,
      center: false,
      transition: 'slide',
      backgroundTransition: 'fade',
      controlsLayout: 'bottom-right',
      controlsBackArrows: 'faded',
      
      // Remove fragments for smooth presentation
      fragments: false,
      
      // Navigation settings
      keyboard: {
        39: 'next',
        37: 'prev',
        32: 'next', // spacebar
        13: 'next'  // enter
      }
    }).then(() => {
      console.log('Reveal.js initialized successfully');
      
      // Add visual indicators for navigation
      const navHints = document.createElement('div');
      navHints.innerHTML = `
        <div style="position: fixed; bottom: 60px; right: 20px; background: rgba(0,0,0,0.8); color: white; padding: 10px 15px; border-radius: 8px; font-size: 14px; z-index: 1000; border: 1px solid #4fc3f7;">
          <div>‚Üê ‚Üí Arrow keys to navigate</div>
          <div>Spacebar for next slide</div>
        </div>
      `;
      document.body.appendChild(navHints);
      
      // Auto-hide navigation hints
      setTimeout(() => {
        navHints.style.opacity = '0';
        navHints.style.transition = 'opacity 2s';
      }, 5000);
    });
  });

  // Add custom navigation hints
  document.addEventListener('DOMContentLoaded', function() {
    // Add subtle instructions for presenters
    const instructions = document.createElement('div');
    instructions.style.cssText = `
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: rgba(0,0,0,0.7);
      color: white;
      padding: 10px;
      border-radius: 5px;
      font-size: 12px;
      z-index: 1000;
    `;
    instructions.innerHTML = 'Arrow keys or spacebar to navigate';
    document.body.appendChild(instructions);
    
    // Auto-hide instructions after 5 seconds
    setTimeout(() => {
      instructions.style.opacity = '0';
      instructions.style.transition = 'opacity 1s';
    }, 5000);
  });

  // PDF Export Function
  window.exportToPDF = async function() {
    const button = document.querySelector('.pdf-export-btn');
    if (!button) {
      console.error('PDF export button not found');
      return;
    }
    
    const originalText = button.textContent;
    button.textContent = '‚è≥ Generating PDF...';
    button.disabled = true;

    try {
      // Check if libraries are loaded
      if (typeof window.jspdf === 'undefined') {
        throw new Error('jsPDF library not loaded');
      }
      if (typeof html2canvas === 'undefined') {
        throw new Error('html2canvas library not loaded');
      }

      const { jsPDF } = window.jspdf;
      const pdf = new jsPDF('landscape', 'mm', 'a4');
      
      // Get all slides
      const slides = document.querySelectorAll('.reveal .slides > section');
      console.log(`Found ${slides.length} slides to export`);
      
      if (slides.length === 0) {
        throw new Error('No slides found to export');
      }
      
      for (let i = 0; i < slides.length; i++) {
        const slide = slides[i];
        button.textContent = `‚è≥ Processing slide ${i + 1}/${slides.length}...`;
        
        // Temporarily show the slide
        const originalDisplay = slide.style.display;
        const originalVisibility = slide.style.visibility;
        const originalOpacity = slide.style.opacity;
        
        slide.style.display = 'block';
        slide.style.visibility = 'visible';
        slide.style.opacity = '1';
        slide.style.position = 'relative';
        slide.style.zIndex = '9999';
        
        // Wait a moment for styles to apply
        await new Promise(resolve => setTimeout(resolve, 200));
        
        // Capture slide as canvas
        const canvas = await html2canvas(slide, {
          width: 1280,
          height: 720,
          scale: 2,
          backgroundColor: '#0a0a0f',
          useCORS: true,
          allowTaint: true,
          logging: false
        });
        
        // Restore original styles
        slide.style.display = originalDisplay;
        slide.style.visibility = originalVisibility;
        slide.style.opacity = originalOpacity;
        slide.style.position = '';
        slide.style.zIndex = '';
        
        // Add page if not first slide
        if (i > 0) pdf.addPage();
        
        const imgData = canvas.toDataURL('image/png', 0.95);
        const imgWidth = 297; // A4 landscape width in mm
        const imgHeight = (canvas.height * imgWidth) / canvas.width;
        
        // Center the image if it's smaller than page
        const yOffset = imgHeight < 210 ? (210 - imgHeight) / 2 : 0;
        
        pdf.addImage(imgData, 'PNG', 0, yOffset, imgWidth, imgHeight);
      }
      
      // Save the PDF
      pdf.save('aValidURL-Investor-Pitch-Deck.pdf');
      
      button.textContent = '‚úÖ PDF Downloaded!';
      setTimeout(() => {
        button.textContent = originalText;
        button.disabled = false;
      }, 3000);
      
    } catch (error) {
      console.error('PDF Export Error:', error);
      button.textContent = `‚ùå Export Failed: ${error.message}`;
      setTimeout(() => {
        button.textContent = originalText;
        button.disabled = false;
      }, 5000);
    }
  }

  // Add keyboard shortcut for PDF export
  document.addEventListener('keydown', function(e) {
    if (e.ctrlKey && e.key === 'p') {
      e.preventDefault();
      exportToPDF();
    }
  });
</script>

<style>
  /* Layout */
  .links-layout {
    margin-top: 2rem;
  }
  
  .links-main {
    max-width: 800px;
    margin: 0 auto;
  }
  
  /* Links Grid */
  .links-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;
  }
  
  /* Link Pills */
  .link-pill {
    background: white;
    color: #333;
    border: 2px dotted #999;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-block;
  }
  
  .link-pill:hover {
    background: #ff8c00;
    color: white;
    border-color: #ff8c00;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 140, 0, 0.3);
  }
  
  /* Featured link (The Journal) */
  .link-pill.featured {
    background: #f8f9fa;
    border-color: #007bff;
    color: #007bff;
    font-weight: 600;
  }
  
  .link-pill.featured:hover {
    background: #007bff;
    color: white;
    border-color: #007bff;
  }

  /* Navigation button */
  .nav-button {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-primary);
    border-radius: 6px;
  }

  .nav-button:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-1px);
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .link-pill {
      background: #1a1a1a;
      color: #e0e0e0;
      border-color: #666;
    }
    
    .link-pill:hover {
      background: #ff8c00;
      color: white;
      border-color: #ff8c00;
    }
    
    .link-pill.featured {
      background: #2a2a2a;
      border-color: #4fa8ff;
      color: #4fa8ff;
    }
    
    .link-pill.featured:hover {
      background: #4fa8ff;
      color: white;
      border-color: #4fa8ff;
    }
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .links-grid {
      gap: 0.75rem;
      padding: 1.5rem 0;
    }
    
    .link-pill {
      padding: 0.6rem 1.2rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .links-grid {
      gap: 0.5rem;
      padding: 1rem 0;
    }
    
    .link-pill {
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
    }

    .nav-button {
      text-align: center;
      justify-content: center;
      width: 100%;
    }
  }
</style>
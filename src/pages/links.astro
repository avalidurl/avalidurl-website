<style>
  .links-page {
    min-height: 100vh;
    background: var(--bg-primary);
    padding: 2rem 0 4rem;
  }

  .links-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .links-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
    letter-spacing: -0.02em;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto 2rem auto;
  }

  /* Navigation Pills */
  .section-nav {
    margin-top: 2rem;
  }

  .nav-pills {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .nav-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    border-radius: 8px;
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-pill:hover {
    background: var(--bg-accent);
    border-color: var(--border-medium);
    color: var(--text-primary);
    transform: translateY(-1px);
  }

  .nav-arrow {
    font-size: 0.8rem;
    transition: transform 0.2s ease;
  }

  .nav-pill:hover .nav-arrow {
    transform: translateY(2px);
  }

  .links-section {
    margin-bottom: 4rem;
    scroll-margin-top: 100px;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-primary);
    text-align: center;
    margin-bottom: 2rem;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .link-card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
  }

  .link-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px var(--card-shadow);
    border-color: var(--color-primary);
  }

  .link-card.featured {
    background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-accent));
    border: 2px solid var(--border-medium);
  }

  .link-card.collaborative {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }

  .card-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .card-link {
    display: inline-block;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border: 2px solid var(--border-medium);
    border-radius: 6px;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }

  .card-link:hover {
    background: var(--color-primary);
    color: var(--text-inverse);
    transform: translateY(-1px);
    border-color: var(--color-primary);
  }

  .featured-link {
    background: var(--color-primary);
    color: var(--text-inverse);
    border-color: var(--color-primary);
  }

  .featured-link:hover {
    background: var(--color-primary-hover);
    color: var(--text-inverse);
    border-color: var(--color-primary-hover);
  }

  .inline-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .inline-link:hover {
    text-decoration: underline;
  }

  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .links-container {
      padding: 0 1rem;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .nav-pills {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .nav-pill {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .cards-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .link-card {
      padding: 1.25rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .links-section {
      margin-bottom: 3rem;
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 0.9rem;
    }

    .link-card {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.125rem;
    }
  }
</style>
<style>
  .links-page {
    min-height: 100vh;
    background: var(--blog-warm-white);
    padding: 2rem 0 4rem;
  }

  .links-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .links-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--blog-charcoal);
    margin-bottom: 1rem;
    font-family: 'Georgia', serif;
    letter-spacing: -0.02em;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--blog-sepia);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .nav-anchor {
    color: var(--blog-bronze);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-anchor:hover {
    color: var(--blog-sepia);
    text-decoration: underline;
  }

  .links-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--blog-charcoal);
    text-align: center;
    margin-bottom: 2rem;
    font-family: 'Georgia', serif;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: var(--blog-bronze);
    border-radius: 1px;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .link-card {
    background: var(--blog-parchment);
    border: 1px solid var(--border-light);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .link-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--blog-bronze), var(--blog-sepia));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .link-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--blog-bronze);
  }

  .link-card:hover::before {
    transform: scaleX(1);
  }

  .link-card.featured {
    background: linear-gradient(135deg, var(--blog-bronze), var(--blog-sepia));
    color: var(--blog-warm-white);
    border: none;
  }

  .link-card.featured .card-title,
  .link-card.featured .card-description {
    color: var(--blog-warm-white);
  }

  .link-card.collaborative {
    background: linear-gradient(135deg, var(--blog-parchment), #f8f4f0);
    border-left: 4px solid var(--blog-bronze);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--blog-charcoal);
    margin-bottom: 0.5rem;
    font-family: 'Georgia', serif;
  }

  .card-description {
    font-size: 0.9rem;
    color: var(--blog-sepia);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .card-link {
    display: inline-block;
    color: var(--blog-bronze);
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border: 2px solid var(--blog-bronze);
    border-radius: 6px;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }

  .card-link:hover {
    background: var(--blog-bronze);
    color: var(--blog-warm-white);
    transform: translateY(-1px);
  }

  .featured-link {
    background: var(--blog-warm-white);
    color: var(--blog-bronze);
    border-color: var(--blog-warm-white);
  }

  .featured-link:hover {
    background: rgba(255, 255, 255, 0.9);
    color: var(--blog-sepia);
  }

  .inline-link {
    color: var(--blog-bronze);
    text-decoration: none;
    font-weight: 500;
  }

  .inline-link:hover {
    text-decoration: underline;
  }

  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .links-container {
      padding: 0 1rem;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .cards-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .link-card {
      padding: 1.25rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .links-section {
      margin-bottom: 3rem;
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 0.9rem;
    }

    .nav-anchor {
      display: block;
      margin: 0.25rem 0;
    }

    .link-card {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.125rem;
    }
  }
</style>
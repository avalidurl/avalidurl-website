    border-bottom: none;
  }
  
  .article-line {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
  }
  
  .article-date {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-weight: 500;
    min-width: 6rem;
  }
  
  .article-title {
    flex: 1;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;

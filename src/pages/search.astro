    margin-bottom: 1rem;
    font-size: 1.1rem;
  }
  
  .browse-list {
    list-style: none;
    padding: 0;
  }
  
  .browse-list li {
    margin-bottom: 0.5rem;
  }
  
  .browse-list a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .browse-list a:hover {
    color: var(--color-primary);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .search-input-group {
      flex-direction: column;
    }
    
    .search-button {
      justify-content: center;
    }
    
    .article-line {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .article-date {
      min-width: auto;
    }
    
    .article-excerpt {
      margin-left: 0;
    }
    
    .browse-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
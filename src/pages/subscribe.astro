---
import Layout from '../layouts/Layout.astro';
import TurnstileWidget from '../components/TurnstileWidget.astro';
import SimpleTurnstile from '../components/SimpleTurnstile.astro';
---

<Layout 
  title="Subscribe - Stay Updated" 
  description="Subscribe to receive insights on finance, art, and technology directly in your inbox."
>
  <main class="container">
    <div class="subscribe-page">
      <header class="subscribe-header">
        <h1>Stay in the Loop</h1>
        <p class="subscribe-subtitle">
          Get notified when I publish new insights on the intersection of finance, art, and technology.
        </p>
      </header>
      
      <div class="subscribe-content">
        <div class="subscribe-form-container">
          <h2>Newsletter Subscription</h2>
          <p class="form-description">
            Join a community of creators, developers, and financial professionals exploring 
            the convergence of data, design, and market dynamics.
          </p>
          
          <div class="subscription-options">
            <div class="option-primary">
              <h3>ðŸ“§ Get Email Updates</h3>
              <form class="subscribe-form" id="newsletter-form" action="https://app.kit.com/forms/8250157/subscriptions" method="post" data-sv-form="8250157" data-uid="6c28efde16" data-format="inline" data-version="5">
                <div class="form-group">
                  <label for="email_address">Email Address</label>
                  <input 
                    type="email" 
                    id="email_address" 
                    name="email_address" 
                    placeholder="your@email.com" 
                    required
                  >
                </div>
                
                <div class="form-group">
                  <label for="fields[interests]">What interests you most?</label>
                  <select id="fields[interests]" name="fields[interests]">
                    <option value="all">Everything</option>
                    <option value="finance">Financial Analysis & Tools</option>
                    <option value="art">Creative Coding & Design</option>
                    <option value="intersection">Finance + Art Intersection</option>
                    <option value="technology">Technology & Innovation</option>
                  </select>
                </div>
                
                <TurnstileWidget 
                  id="subscribe-turnstile"
                  theme="auto"
                  size="normal"
                />
                
                <button type="submit" class="subscribe-button">
                  Subscribe to Newsletter
                </button>
              </form>
              
              <p class="privacy-note">
                No spam, ever. Unsubscribe at any time. 
                <a href="/privacy">Privacy Policy</a>
              </p>
            </div>
            
            <div class="option-divider">
              <span>OR</span>
            </div>
            
            <div class="option-secondary">
              <h3>ðŸ“¡ Follow via RSS</h3>
              <p class="rss-description">
                Prefer feed readers? Get updates directly in your RSS client without sharing your email.
              </p>
              <a href="/feed.xml" class="rss-button">
                Access RSS Feed
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="subscribe-footer">
        <p>
          Ready to explore where finance meets art? 
          <a href="/blog">Check out recent posts</a> or 
          <a href="/">view my latest projects</a>.
        </p>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('newsletter-form') as HTMLFormElement;
      if (!form) return;
      
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Get the Turnstile token
        const turnstileResponse = document.querySelector('input[name="cf-turnstile-response"]') as HTMLInputElement;
        if (!turnstileResponse || !turnstileResponse.value) {
          alert('Please complete the Turnstile challenge before submitting.');
          return;
        }
        
        // Verify the token with our server
        try {
          const response = await fetch('/api/verify-turnstile', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              token: turnstileResponse.value
            })
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Token is valid, submit the form to Kit.com
            form.submit();
          } else {
            alert('Verification failed. Please try again.');
            // Reset the Turnstile widget
            if ((window as any).turnstile) {
              (window as any).turnstile.reset('#subscribe-turnstile');
            }
          }
        } catch (error) {
          console.error('Verification error:', error);
          alert('An error occurred. Please try again.');
        }
      });
    });
  </script>
</Layout>

<style>
  .subscribe-page {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .subscribe-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-light);
    position: relative;
  }
  
  .subscribe-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 1px;
    background: var(--accent-primary);
  }
  
  .subscribe-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 1rem;
    line-height: 1.6;
    font-style: italic;
  }
  
  .subscribe-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    align-items: start;
  }
  
  .subscribe-form-container {
    background: var(--bg-card);
    padding: 2.5rem;
    border: 2px solid var(--border-light);
    border-radius: 8px;
  }
  
  .subscribe-form-container h2 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }
  
  .form-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    color: var(--text-secondary);
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    letter-spacing: 0.3px;
  }
  
  .form-group input,
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--border-medium);
    border-radius: 6px;
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }
  
  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }
  
  .subscribe-button {
    width: 100%;
    background: var(--accent-primary);
    color: var(--text-on-dark);
    border: none;
    padding: 1rem 2rem;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
  }
  
  .subscribe-button:hover {
    background: var(--accent-secondary);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
    transform: translateY(-1px);
  }
  
  .privacy-note {
    font-size: 0.875rem;
    color: var(--text-muted);
    text-align: center;
  }
  
  .privacy-note a {
    color: var(--accent-primary);
    font-weight: 500;
  }
  
  .subscribe-benefits {
    background: var(--blog-parchment);
    padding: 2.5rem;
    border: 2px solid var(--border-light);
    border-radius: 8px;
  }
  
  .subscribe-benefits h3 {
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }
  
  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }
  
  .benefits-list li {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-secondary);
    line-height: 1.5;
  }
  
  .benefits-list li::before {
    content: 'âœ¦';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-weight: bold;
  }
  
  .benefits-list strong {
    color: var(--text-primary);
    display: block;
    margin-bottom: 0.25rem;
  }
  
  .subscription-options {
    margin-top: 1.5rem;
  }
  
  .option-primary h3,
  .option-secondary h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-size: 1.125rem;
    font-weight: 600;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }
  
  .option-divider {
    text-align: center;
    margin: 2rem 0;
    position: relative;
  }
  
  .option-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--border-medium);
    z-index: 1;
  }
  
  .option-divider span {
    background: var(--bg-card);
    padding: 0 1rem;
    color: var(--text-muted);
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
    position: relative;
    z-index: 2;
  }
  
  .option-secondary {
    text-align: center;
    padding: 1.5rem;
    background: var(--bg-accent);
    border: 1px solid var(--border-light);
    border-radius: 8px;
  }
  
  .rss-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .rss-button {
    display: inline-block;
    color: var(--accent-primary);
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    background: rgba(212, 175, 55, 0.1);
    border: 2px solid var(--accent-primary);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.95rem;
  }
  
  .rss-button:hover {
    background: var(--accent-primary);
    color: var(--text-on-dark);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
  }
  
  .subscribe-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);
    color: var(--text-secondary);
  }
  
  .subscribe-footer a {
    color: var(--accent-primary);
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .subscribe-content {
      gap: 2rem;
    }
    
    .subscribe-form-container,
    .subscribe-benefits {
      padding: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.subscribe-form') as HTMLFormElement;
    const submitButton = form?.querySelector('.subscribe-button') as HTMLButtonElement;
    
    if (form && submitButton) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Get Turnstile token
        const turnstileResponse = (window as any).turnstile?.getResponse('subscribe-turnstile');
        
        if (!turnstileResponse) {
          alert('Please complete the security check before submitting.');
          return;
        }
        
        // Disable submit button
        submitButton.disabled = true;
        submitButton.textContent = 'Subscribing...';
        
        try {
          // Verify Turnstile token
          const verificationResponse = await fetch('/api/verify-turnstile', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ token: turnstileResponse })
          });
          
          const verificationResult = await verificationResponse.json();
          
          if (!verificationResult.success) {
            throw new Error('Security verification failed');
          }
          
          // Submit the form normally
          form.submit();
          
        } catch (error) {
          console.error('Form submission error:', error);
          alert('There was an error submitting the form. Please try again.');
          
          // Reset button
          submitButton.disabled = false;
          submitButton.textContent = 'Subscribe to Newsletter';
          
          // Reset Turnstile
          (window as any).turnstile?.reset('subscribe-turnstile');
        }
      });
    }
  });
</script>
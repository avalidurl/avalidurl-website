<style>
  .welcome-page {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .welcome-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-light);
    position: relative;
  }
  
  .welcome-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
  }
  
  .welcome-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-top: 1.5rem;
    line-height: 1.6;
    font-style: italic;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .confirmation-success {
    background: var(--accent-secondary);
    color: var(--text-on-dark);
    padding: 2rem;
    border-radius: 8px;
    margin-top: 2rem;
    text-align: center;
    border: 3px solid var(--accent-primary);
  }
  
  .confirmation-success h2 {
    margin-bottom: 1rem;
    color: var(--text-on-dark);
  }
  
  .confirmation-success p {
    margin-bottom: 0;
    color: var(--text-on-dark);
    line-height: 1.6;
  }
  
  .welcome-content {
    margin-bottom: 4rem;
  }
  
  .next-steps {
    margin-bottom: 4rem;
  }
  
  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .step-card {
    background: var(--bg-card);
    padding: 2rem;
    border: 2px solid var(--border-light);
    border-radius: 8px;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .step-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .step-card:hover::before {
    transform: scaleX(1);
  }
  
  .step-card:hover {
    border-color: var(--border-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 175, 55, 0.15);
  }
  
  .step-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }
  
  .step-card h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-size: 1.125rem;
    font-weight: 600;
  }
  
  .step-card p {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .explore-content {
    margin-bottom: 4rem;
  }
  
  .section-intro {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .featured-links {
    display: grid;
    gap: 1.5rem;
  }
  
  .link-item {
    background: var(--blog-parchment);
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  
  .link-item:hover {
    border-color: var(--blog-bronze);
    box-shadow: 0 4px 16px rgba(205, 127, 50, 0.1);
  }
  
  .link-item h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.125rem;
    line-height: 1.3;
  }
  
  .link-item h3 a {
    color: var(--blog-charcoal);
    text-decoration: none;
    font-weight: 600;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
    transition: color 0.3s ease;
  }
  
  .link-item h3 a:hover {
    color: var(--blog-bronze);
    border-bottom: none;
  }
  
  .link-item p {
    color: var(--blog-sepia);
    line-height: 1.6;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }
  
  .link-meta {
    color: var(--blog-muted-gold);
    font-size: 0.875rem;
    font-style: italic;
    font-weight: 500;
  }
  
  .community-welcome {
    margin-bottom: 4rem;
  }
  
  .community-welcome p {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: var(--bg-card);
    border: 2px solid var(--border-light);
    border-radius: 8px;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    border-color: var(--accent-primary);
    background: var(--accent-primary);
    color: var(--text-on-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
  }
  
  .social-icon {
    font-size: 1.25rem;
  }
  
  .welcome-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);
    color: var(--text-secondary);
  }
  
  .welcome-footer p {
    margin-bottom: 2rem;
    font-size: 1.05rem;
    line-height: 1.6;
  }
  
  .footer-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }
  
  .primary-action {
    display: inline-block;
    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    padding: 1rem 2rem;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    font-size: 0.9rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    border: 2px solid var(--blog-sepia);
  }
  
  .primary-action:hover {
    background: var(--blog-bronze);
    border-color: var(--blog-bronze);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(205, 127, 50, 0.3);
  }
  
  .secondary-action {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    padding: 1rem;
    transition: color 0.3s ease;
  }
  
  .secondary-action:hover {
    color: var(--accent-primary);
    border-bottom: none;
  }
  
  @media (max-width: 768px) {
    .steps-grid {
      grid-template-columns: 1fr;
    }
    
    .social-links {
      flex-direction: column;
      align-items: center;
    }
    
    .social-link {
      width: 200px;
      justify-content: center;
    }
    
    .step-card {
      padding: 1.5rem;
    }
    
    .link-item {
      padding: 1.5rem;
    }
    
    .footer-actions {
      flex-direction: column;
    }
  }
</style>
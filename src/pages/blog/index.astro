      padding: 1.5rem 1rem;
    }
    
    .blog-header h1 {
      font-size: 1.75rem;
    }

    .article-line {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
      padding: 0.4rem 0;
    }


    transition: background 0.3s ease;
  }
  
  .share-button:hover {
    background: var(--blog-bronze);
  }
  
  .post-sidebar {
    max-width: 400px;
    margin: 0 auto;
  }
  
  .newsletter-cta {
    background: var(--blog-parchment);
    padding: 2rem;
    border: 1px solid var(--border-light);
    text-align: center;
  }
  
  .newsletter-cta h3 {
    color: var(--blog-charcoal);
    margin-bottom: 1rem;

    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    padding: 0.25rem 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    font-size: 0.75rem;
  }
  
  .post-date {
    color: var(--blog-bronze);
    font-weight: 500;
    font-family: 'Georgia', serif;
  }
  

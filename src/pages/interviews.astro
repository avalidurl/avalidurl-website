---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all interview posts
const interviewPosts = await getCollection('blog', ({ data }) => {
  return !data.draft && 
         new Date(data.publishDate) <= new Date() && 
         data.tags.some(tag => tag.toLowerCase() === 'interview');
}).then(posts => 
  posts.sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
);
---

<Layout title="Interviews - In-Depth Conversations" description="Deep conversations exploring art, technology, finance, and culture with leading thinkers and creators.">
  <main class="blog-container">
    <header class="blog-header">
      <h1>Interviews</h1>
      <div class="blog-nav">
        <a href="/blog" class="topics-link">← Back to Journal</a>
      </div>
      <p class="blog-subtitle">
        Deep conversations exploring art, technology, finance, and culture with leading thinkers and creators.
      </p>
    </header>
    
    <section class="interviews-section">
      {interviewPosts.length > 0 ? (
        <div class="interviews-grid">
          {interviewPosts.map((post, index) => (
            <article class="interview-card" class:list={[index === 0 ? 'featured' : '']}>
              <div class="interview-meta">
                <span class="interview-category">{post.data.category}</span>
                <time class="interview-date" datetime={post.data.publishDate.toISOString()}>
                  {new Date(post.data.publishDate).toLocaleDateString('en-CA')}
                </time>
              </div>
              
              <h2 class="interview-title">
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h2>
              
              <p class="interview-description">
                {post.data.excerpt || post.data.description}
              </p>
              
              <div class="interview-details">
                <div class="interview-tags">
                  {post.data.tags.filter(tag => tag.toLowerCase() !== 'interview').sort((a, b) => a.localeCompare(b)).slice(0, 3).map(tag => (
                    <a href={`/topics/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="interview-tag">
                      {tag}
                    </a>
                  ))}
                </div>
                
                {post.data.readingTime && (
                  <span class="reading-time">{post.data.readingTime} min read</span>
                )}
              </div>
              
              <div class="interview-footer">
                <span class="interview-author">By {post.data.author}</span>
                <a href={`/blog/${post.slug}`} class="read-interview">
                  Read Interview →
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="no-interviews">
          <div class="no-interviews-content">
            <h2>No Interviews Yet</h2>
            <p>Stay tuned for upcoming in-depth conversations with fascinating people from the worlds of art, technology, and finance.</p>
            <a href="/blog" class="back-to-blog">Browse Journal →</a>
          </div>
        </div>
      )}
    </section>
    
    <footer class="interviews-footer">
      <div class="footer-actions">
        <a href="/blog" class="back-to-blog">← Back to Journal</a>
        <a href="/topics" class="all-topics">Browse All Topics →</a>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-light);
    position: relative;
  }
  
  .page-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 1px;
    background: var(--text-secondary);
  }
  
  .interview-badge {
    background: var(--text-secondary);
    color: var(--text-inverse);
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    display: inline-block;
    margin-bottom: 1.5rem;
  }
  
  .page-header h1 {
    font-size: 3rem;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-weight: 700;
    line-height: 1.2;
  }
  
  .page-description {
    color: var(--text-muted);
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .interviews-grid {
    display: grid;
    gap: 2.5rem;
  }
  
  .interview-card {
    background: var(--card-bg);
    border: 2px solid var(--card-border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .interview-card:hover {
    border-color: var(--border-medium);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px var(--card-shadow);
  }
  
  .interview-card.featured {
    border: 2px solid var(--card-border);
    background: var(--card-bg);
  }
  
  .interview-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }
  
  .interview-category {
    background: var(--color-secondary);
    color: var(--text-inverse);
    padding: 0.3rem 0.8rem;
    border-radius: 4px;
    font-weight: 600;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    font-size: 0.75rem;
  }
  
  .interview-date {
    color: var(--text-muted);
    font-weight: 500;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }
  
  .interview-title {
    margin: 0 0 1.5rem 0;
    font-size: 1.75rem;
    line-height: 1.3;
    font-weight: 700;
  }
  
  .interview-title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .interview-title a:hover {
    color: var(--text-secondary);
  }
  
  .interview-description {
    color: var(--text-secondary);
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  
  .interview-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding: 1rem 0;
    border-top: 1px solid var(--border-light);
    border-bottom: 1px solid var(--border-light);
  }
  
  .interview-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0;
    align-items: center;
  }
  
  .interview-tag {
    color: #FF8C00;
    font-size: 0.75rem;
    font-weight: 400;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .interview-tag:hover {
    color: #FF4500;
  }

  .interview-tag:not(:last-child)::after {
    content: ", ";
    color: var(--text-muted);
  }
  
  .reading-time {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-style: italic;
  }
  
  .interview-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .interview-author {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-style: italic;
  }
  
  .read-interview {
    background: var(--text-secondary);
    color: var(--text-inverse);
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    letter-spacing: 0.3px;
  }
  
  .read-interview:hover {
    background: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px var(--card-shadow);
  }
  
  .no-interviews {
    text-align: center;
    padding: 4rem 2rem;
  }
  
  .no-interviews-content h2 {
    color: var(--text-primary);
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .no-interviews-content p {
    color: var(--text-muted);
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .interviews-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);
  }
  
  .footer-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }
  
  .back-to-blog,
  .all-topics {
    color: var(--text-secondary);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .back-to-blog:hover,
  .all-topics:hover {
    color: var(--text-primary);
  }
  
  /* Interview info section removed */
  
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.5rem;
    }
    
    .interview-card {
      padding: 2rem 1.5rem;
    }
    
    .interview-title {
      font-size: 1.5rem;
    }
    
    .interview-details {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .interview-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .footer-actions {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }
    
    .interview-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
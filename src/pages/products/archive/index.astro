    color: var(--text-muted);
    font-size: 0.75rem;
    font-weight: 400;
    white-space: nowrap;
    flex-shrink: 0;
    min-width: 50px;
  }

  .archive-title {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 400;
    line-height: 1.4;
    transition: color 0.2s ease;
    border-bottom: 1px dotted var(--text-muted);
    flex: 1;
    min-width: 0;
  }

  .archive-title:hover {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }


    color: white;
    font-size: 0.65rem;
    font-weight: 500;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    flex-shrink: 0;
  }

  .archive-status[data-status="beta"] {
    background: #f59e0b;
  }

  .archive-status[data-status="development"] {
    background: #6366f1;
  }

  .archive-status[data-status="archived"] {
    background: #6b7280;
  }

  .archive-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0;
    align-items: center;
    flex-shrink: 0;
  }


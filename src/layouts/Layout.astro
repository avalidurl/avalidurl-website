---
import Navigation from '../components/Navigation.astro';

export interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "A digital creator exploring the intersection of technology, art, and human connection through code and creativity." 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="developer, digital art, technology, creative coding, portfolio" />
    <meta name="author" content="Your Name" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.jpg', Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/og-image.jpg', Astro.site)} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={title} href="/feed.xml" />
    
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Your Name",
      "url": canonicalURL,
      "sameAs": [
        "https://twitter.com/yourusername",
        "https://github.com/yourusername", 
        "https://linkedin.com/in/yourusername"
      ],
      "jobTitle": "Digital Creator & Developer",
      "description": description
    })} />
  </head>
  <body>
    <Navigation />
    <button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
      <span class="theme-icon">ðŸŒ™</span>
    </button>
    <slot />
    
    <script>
      // Dark mode toggle functionality
      const themeToggle = document.getElementById('theme-toggle');
      const themeIcon = themeToggle.querySelector('.theme-icon');
      
      // Check for saved theme preference or default to light mode
      const currentTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', currentTheme);
      
      // Update icon based on current theme
      function updateThemeIcon(theme) {
        themeIcon.textContent = theme === 'dark' ? 'â˜€ï¸' : 'ðŸŒ™';
      }
      
      updateThemeIcon(currentTheme);
      
      themeToggle.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeIcon(newTheme);
      });
    </script>
  </body>
</html>

<style is:global>
  /* Evidence-Based Accessible Color System (2025) */
  :root {
    /* Core Scientific Color Palette - WCAG AAA Compliant */
    
    /* Primary Text Colors - 7:1+ contrast ratio */
    --text-primary: #1A1A1A;        /* Near-black (softer than pure black) */
    --text-secondary: #333333;      /* Dark gray for secondary text */
    --text-muted: #666666;          /* Medium gray for muted text */
    --text-inverse: #F5F5F5;        /* Off-white for dark backgrounds */
    
    /* Background Colors - Optimized for readability */
    --bg-primary: #FFFFFF;          /* Pure white background */
    --bg-secondary: #FAFAFA;        /* Off-white for subtle variation */
    --bg-tertiary: #F5F5F5;         /* Light gray for cards/sections */
    --bg-accent: #F8F9FA;           /* Subtle accent background */
    
    /* Colorblind-Safe Interactive Colors */
    --color-primary: #1565C0;       /* Blue - universally accessible */
    --color-primary-hover: #0D47A1;  /* Darker blue for hover */
    --color-secondary: #E65100;     /* Orange - contrasts with blue */
    --color-secondary-hover: #BF360C; /* Darker orange for hover */
    
    /* Semantic Colors - High Contrast */
    --color-success: #2E7D32;       /* Green - WCAG AAA compliant */
    --color-warning: #F57F17;       /* Amber - visible to colorblind */
    --color-error: #C62828;         /* Red - high contrast */
    --color-info: #1976D2;          /* Blue - information color */
    
    /* Border Colors - Subtle but visible */
    --border-light: #E0E0E0;        /* Light borders */
    --border-medium: #BDBDBD;       /* Medium borders */
    --border-dark: #757575;         /* Dark borders */
    --border-focus: #1565C0;        /* Focus outline color */
    
    /* Navigation & UI Colors */
    --nav-bg: #FFFFFF;              /* Navigation background */
    --nav-text: #1A1A1A;           /* Navigation text */
    --nav-accent: #1565C0;          /* Navigation accent */
    
    /* Link Colors - High contrast and accessible */
    --link-color: #1565C0;          /* Primary link color */
    --link-hover: #0D47A1;          /* Link hover color */
    --link-visited: #7B1FA2;        /* Visited link color */
    
    /* Card and Component Colors */
    --card-bg: #FFFFFF;
    --card-border: #E0E0E0;
    --card-shadow: rgba(0, 0, 0, 0.1);
    
    /* Blog-Specific Colors - Franco Maria Ricci Inspired */
    --blog-warm-white: #FEFDF8;     /* Warm paper-like white */
    --blog-parchment: #F9F7F1;      /* Parchment background */
    --blog-charcoal: #2C2C2C;       /* Dark charcoal for text */
    --blog-sepia: #704214;          /* Sepia brown */
    --blog-bronze: #CD7F32;         /* Bronze accent */
    --blog-muted-gold: #B8860B;     /* Muted gold for accents */
    
    /* Button Colors - Maximum contrast */
    --btn-primary-bg: #1565C0;
    --btn-primary-text: #FFFFFF;
    --btn-primary-hover: #0D47A1;
    --btn-secondary-bg: #E65100;
    --btn-secondary-text: #FFFFFF;
    --btn-secondary-hover: #BF360C;
  }
  
  /* Bloomberg Terminal Dark Mode - Exact Color Match */
  [data-theme="dark"] {
    /* Bloomberg terminal text colors matching screenshot */
    --text-primary: #FFFFFF;          /* White headers like Bloomberg */
    --text-secondary: #FF8C00;        /* Orange text */
    --text-muted: #FFA500;            /* Light orange for muted text */
    --text-inverse: #000000;          /* Black text for light elements */
    
    /* Terminal backgrounds - exact Bloomberg black */
    --bg-primary: #000000;            /* Pure black background */
    --bg-secondary: #1A1A1A;          /* Dark charcoal for sections */
    --bg-tertiary: #2A2A2A;           /* Lighter charcoal for cards */
    --bg-accent: #333333;             /* Medium gray for accents */
    
    /* Bloomberg exact accent colors */
    --color-primary: #FF8C00;         /* Bloomberg orange */
    --color-primary-hover: #FF7F00;   /* Slightly brighter orange */
    --color-secondary: #32CD32;       /* Green for positive values */
    --color-secondary-hover: #00FF00; /* Bright green for hover */
    
    /* Terminal semantic colors matching Bloomberg */
    --color-success: #32CD32;         /* Green for positive/success */
    --color-warning: #FFFF00;         /* Yellow for warnings */
    --color-error: #FF0000;           /* Red for negative/errors */
    --color-info: #FF8C00;            /* Orange for info */
    
    /* Terminal borders - subtle gray/orange */
    --border-light: #333333;          /* Dark gray border */
    --border-medium: #555555;         /* Medium gray border */
    --border-dark: #777777;           /* Light gray border */
    --border-focus: #FF8C00;          /* Orange focus outline */
    
    /* Terminal navigation */
    --nav-bg: #000000;
    --nav-text: #FFFFFF;
    --nav-accent: #FF8C00;
    
    /* Terminal links */
    --link-color: #FF8C00;
    --link-hover: #FFA500;
    --link-visited: #DAA520;
    
    /* Terminal cards and components */
    --card-bg: #1A1A1A;
    --card-border: #333333;
    --card-shadow: rgba(255, 140, 0, 0.2);
    
    /* Blog colors in dark mode */
    --blog-warm-white: #1A1A1A;
    --blog-parchment: #2A2A2A;
    --blog-charcoal: #FFFFFF;
    --blog-sepia: #FF8C00;
    --blog-bronze: #FFA500;
    --blog-muted-gold: #DAA520;
  }
  
  /* Reset and base styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    font-size: 16px;
    line-height: 1.6;
  }
  
  body {
    /* Optimized font stack for maximum readability */
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    /* Improve text readability */
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;
  }
  
  /* Layout */
  .container {
    max-width: 650px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: calc(100vh - 70px);
  }
  
  /* Optimized Typography for Maximum Readability */
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: -0.025em;
    position: relative;
  }
  
  h1::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 2px;
  }
  
  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
    letter-spacing: -0.015em;
    position: relative;
  }
  
  h2::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 100%;
    background: var(--color-primary);
    border-radius: 2px;
  }
  
  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 1.5rem 0 0.75rem 0;
    line-height: 1.4;
  }
  
  p {
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.7;
    font-size: 1rem;
  }
  
  /* Accessible Links with High Contrast */
  a {
    color: var(--link-color);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: all 0.2s ease;
    font-weight: 500;
  }
  
  a:hover {
    color: var(--link-hover);
    text-decoration-thickness: 2px;
  }
  
  a:visited {
    color: var(--link-visited);
  }
  
  a:focus {
    outline: 3px solid var(--border-focus);
    outline-offset: 2px;
    border-radius: 3px;
    background-color: rgba(21, 101, 192, 0.1);
  }
  
  /* Remove underline for navigation links */
  .nav-link {
    text-decoration: none;
  }
  
  /* Page header */
  .page-header {
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .page-header h1 {
    margin-bottom: 0;
  }
  
  /* Bio section */
  .bio {
    margin-bottom: 3rem;
  }
  
  .bio p {
    font-size: 1.1rem;
    line-height: 1.8;
  }
  
  /* Content sections */
  .content-section {
    margin-bottom: 2.5rem;
  }
  
  /* Product grid */
  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .product-card {
    background: var(--card-bg);
    border: 2px solid var(--card-border);
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--color-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .product-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 8px 24px var(--card-shadow);
    transform: translateY(-2px);
  }
  
  .product-card:hover::before {
    opacity: 1;
  }
  
  .product-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }
  
  .product-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
  }
  
  .product-title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 600;
  }
  
  .product-title a:hover {
    color: var(--color-primary);
  }
  
  .product-title a:focus {
    outline: 2px solid var(--border-focus);
    outline-offset: 2px;
    border-radius: 3px;
  }
  
  .product-status {
    background: var(--color-success);
    color: var(--text-inverse);
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    white-space: nowrap;
    flex-shrink: 0;
    border: 1px solid var(--color-success);
  }
  
  .product-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .product-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-tag {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border: 1px solid var(--border-medium);
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3px;
    transition: all 0.2s ease;
  }
  
  .tech-tag:hover {
    background: var(--color-primary);
    color: var(--text-inverse);
    border-color: var(--color-primary);
  }
  
  .content-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .content-item {
    margin-bottom: 0.75rem;
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }
  
  .content-item a {
    flex: 1;
  }
  
  .content-year {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-weight: 500;
    min-width: 3rem;
    text-align: right;
  }
  
  /* Footer */
  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border-light);
    position: relative;
  }
  
  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-primary);
  }
  
  .subscribe-link {
    background: var(--btn-secondary-bg);
    color: var(--btn-secondary-text);
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    border: 2px solid var(--btn-secondary-bg);
  }
  
  .subscribe-link:hover {
    background: var(--btn-secondary-hover);
    border-color: var(--btn-secondary-hover);
    color: var(--btn-secondary-text);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(230, 81, 0, 0.3);
  }
  
  .subscribe-link:focus {
    outline: 3px solid var(--border-focus);
    outline-offset: 2px;
  }
  
  /* Responsive design */
  @media (max-width: 640px) {
    .container {
      padding: 1.5rem 1rem;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .content-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .content-year {
      text-align: left;
      min-width: auto;
    }
    
    .product-grid {
      gap: 1.5rem;
    }
    
    .product-card {
      padding: 1.25rem;
    }
    
    .product-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
    
    .product-status {
      align-self: flex-start;
    }
  }
  
  /* Performance optimizations */
  img {
    max-width: 100%;
    height: auto;
  }
  
  /* Accessibility improvements */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  /* Smooth scrolling */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }
  
  /* Blog Styles - Franco Maria Ricci Inspired */
  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--border-light);
    position: relative;
  }
  
  .blog-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--blog-bronze), transparent);
  }
  
  .blog-subtitle {
    font-size: 1.125rem;
    color: var(--blog-sepia);
    font-style: italic;
    max-width: 600px;
    margin: 1rem auto 0;
    line-height: 1.6;
  }
  
  .featured-section {
    margin-bottom: 4rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2.5rem;
    margin-top: 2rem;
  }
  
  .featured-article {
    background: var(--blog-parchment);
    padding: 2.5rem;
    border-radius: 0;
    border: 1px solid var(--border-light);
    position: relative;
    transition: all 0.3s ease;
  }
  
  .featured-article::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--blog-bronze);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .featured-article:hover::before {
    transform: scaleX(1);
  }
  
  .featured-article:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(112, 66, 20, 0.15);
  }
  
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .article-card {
    background: #ffffff;
    padding: 2rem;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .article-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }
  
  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  
  .article-category {
    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    padding: 0.25rem 0.75rem;
    border-radius: 0;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    font-size: 0.75rem;
  }
  
  .article-date {
    color: var(--blog-bronze);
    font-weight: 500;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }
  
  .article-title {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    line-height: 1.4;
  }
  
  .article-title a {
    color: var(--blog-charcoal);
    text-decoration: none;
    font-weight: 600;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
    transition: color 0.3s ease;
  }
  
  .article-title a:hover {
    color: var(--blog-bronze);
    border-bottom: none;
  }
  
  .article-excerpt {
    color: var(--blog-sepia);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .tag {
    background: transparent;
    color: var(--blog-bronze);
    border: 1px solid var(--blog-bronze);
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3px;
    transition: all 0.2s ease;
  }
  
  .tag:hover {
    background: var(--blog-bronze);
    color: var(--blog-warm-white);
  }
  
  .reading-time {
    color: var(--blog-muted-gold);
    font-size: 0.875rem;
    font-style: italic;
  }
  
  .blog-sidebar {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);
  }
  
  .newsletter-signup {
    background: var(--blog-parchment);
    padding: 2rem;
    text-align: center;
    border: 1px solid var(--border-light);
    max-width: 500px;
    margin: 0 auto;
  }
  
  .newsletter-signup h3 {
    color: var(--blog-charcoal);
    margin-bottom: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', system-ui, sans-serif;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin: 1.5rem 0;
  }
  
  .newsletter-form input {
    flex: 1;
    padding: 0.75rem;
    border: 2px solid var(--border-medium);
    background: var(--blog-warm-white);
    font-size: 0.875rem;
    transition: border-color 0.3s ease;
  }
  
  .newsletter-form input:focus {
    outline: none;

import Navigation from '../components/Navigation.astro';
import CookieNotice from '../components/CookieNotice.astro';
import { env } from '../utils/env.ts';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  slug?: string;
}

const { 
  title, 
  description = "T-shaped generalist solopreneur, researcher, and conceptual artist operating across fintech, deep tech, competitive governance, art markets, and investment strategies. Specialized in stablecoins, RWAs, tokenization, cryptography, DeFi protocols, and emerging financial infrastructure.",
  ogImage,
  ogType = "website",
  slug
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, env.SITE_URL);

// Generate dynamic OG image URL
const generateOGImageUrl = () => {
  if (ogImage) return ogImage;
  
  const baseUrl = env.SITE_URL;
  const encodedTitle = encodeURIComponent(title);
  const encodedDescription = encodeURIComponent(description);
  const type = ogType === 'article' ? 'blog' : 'default';
  const slugParam = slug ? `&slug=${encodeURIComponent(slug)}` : '';
  
  return `${baseUrl}/api/og-image?title=${encodedTitle}&description=${encodedDescription}&type=${type}${slugParam}`;
};

const dynamicOGImage = generateOGImageUrl();

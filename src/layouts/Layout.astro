---
import Navigation from '../components/Navigation.astro';

export interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "A digital creator exploring the intersection of technology, art, and human connection through code and creativity." 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="developer, digital art, technology, creative coding, portfolio" />
    <meta name="author" content="Your Name" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.jpg', Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/og-image.jpg', Astro.site)} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={title} href="/feed.xml" />
    
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Your Name",
      "url": canonicalURL,
      "sameAs": [
        "https://twitter.com/yourusername",
        "https://github.com/yourusername", 
        "https://linkedin.com/in/yourusername"
      ],
      "jobTitle": "Digital Creator & Developer",
      "description": description
    })} />
  </head>
  <body>
    <Navigation />
    <slot />
    
  </body>
</html>

<style is:global>
  /* Art Deco Royalist Color Palette */
  :root {
    /* Primary Art Deco Colors */
    --royal-navy: #1a237e;
    --rich-burgundy: #8e0026;
    --classic-gold: #d4af37;
    --ivory-cream: #faf7f0;
    --charcoal: #2c2c2c;
    --silver: #a8a8a8;
    --deep-emerald: #004d40;
    
    /* Supporting Colors */
    --royal-navy-light: #3f4fb8;
    --royal-navy-dark: #0d1658;
    --burgundy-light: #c2185b;
    --gold-light: #e6c547;
    --cream-dark: #f5f1e8;
    --charcoal-light: #424242;
    --emerald-light: #00695c;
    
    /* Semantic Colors */
    --accent-primary: var(--classic-gold);
    --accent-secondary: var(--deep-emerald);
    --accent-tertiary: var(--royal-navy);
    --accent-danger: var(--rich-burgundy);
    
    /* Text colors for maximum readability */
    --text-primary: var(--charcoal);
    --text-secondary: var(--royal-navy);
    --text-muted: var(--silver);
    --text-on-dark: var(--ivory-cream);
    --text-accent: var(--classic-gold);
    
    /* Background colors */
    --bg-primary: var(--ivory-cream);
    --bg-secondary: var(--cream-dark);
    --bg-accent: #f8f5ed;
    --bg-card: #ffffff;
    --bg-overlay: rgba(26, 35, 126, 0.95);
    
    /* Border colors */
    --border-light: #e8e5dd;
    --border-medium: #d0ccc0;
    --border-accent: var(--classic-gold);
    --border-focus: var(--royal-navy);
    
    /* Blog-specific Franco Maria Ricci inspired colors */
    --blog-bronze: #cd7f32;
    --blog-sepia: #704214;
    --blog-parchment: #f4f1e8;
    --blog-charcoal: #3c3c3c;
    --blog-muted-gold: #b8860b;
    --blog-warm-white: #fefcf7;
  }
  
  /* Dark mode - Art Deco Royalist */
  @media (prefers-color-scheme: dark) {
    :root {
      --text-primary: var(--ivory-cream);
      --text-secondary: var(--gold-light);
      --text-muted: var(--silver);
      --text-on-dark: var(--ivory-cream);
      --text-accent: var(--classic-gold);
      
      --bg-primary: var(--royal-navy-dark);
      --bg-secondary: var(--charcoal);
      --bg-accent: var(--charcoal-light);
      --bg-card: var(--royal-navy);
      --bg-overlay: rgba(250, 247, 240, 0.95);
      
      --border-light: var(--charcoal-light);
      --border-medium: var(--silver);
      --border-accent: var(--classic-gold);
      --border-focus: var(--gold-light);
    }
  }
  
  /* Reset and base styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    font-size: 16px;
    line-height: 1.6;
  }
  
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  /* Layout */
  .container {
    max-width: 650px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: calc(100vh - 70px);
  }
  
  /* Typography */
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: -0.5px;
    position: relative;
  }
  
  h1::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    border-radius: 2px;
  }
  
  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    position: relative;
  }
  
  h2::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 100%;
    background: var(--accent-primary);
    border-radius: 2px;
  }
  
  p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  /* Links */
  a {
    color: var(--accent-tertiary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
    font-weight: 500;
  }
  
  a:hover {
    color: var(--accent-primary);
    border-bottom-color: var(--accent-primary);
  }
  
  a:focus {
    outline: 2px solid var(--border-focus);
    outline-offset: 2px;
    border-radius: 3px;
  }
  
  /* Page header */
  .page-header {
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .page-header h1 {
    margin-bottom: 0;
  }
  
  /* Bio section */
  .bio {
    margin-bottom: 3rem;
  }
  
  .bio p {
    font-size: 1.1rem;
    line-height: 1.8;
  }
  
  /* Content sections */
  .content-section {
    margin-bottom: 2.5rem;
  }
  
  /* Product grid */
  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .product-card {
    background: var(--bg-card);
    border: 2px solid var(--border-light);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .product-card:hover {
    border-color: var(--border-accent);
    box-shadow: 0 8px 32px rgba(26, 35, 126, 0.15);
    transform: translateY(-2px);
  }
  
  .product-card:hover::before {
    opacity: 1;
  }
  
  .product-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }
  
  .product-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
  }
  
  .product-title a {
    color: var(--text-primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
    font-weight: 600;
  }
  
  .product-title a:hover {
    color: var(--accent-primary);
    border-bottom-color: var(--accent-primary);
  }
  
  .product-status {
    background: var(--accent-secondary);
    color: var(--text-on-dark);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    white-space: nowrap;
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(0, 77, 64, 0.3);
  }
  
  .product-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .product-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-tag {
    background: var(--bg-accent);
    color: var(--text-secondary);
    border: 1px solid var(--border-medium);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.3px;
    transition: all 0.2s ease;
  }
  
  .tech-tag:hover {
    background: var(--accent-primary);
    color: var(--text-on-dark);
    border-color: var(--accent-primary);
  }
  
  .content-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .content-item {
    margin-bottom: 0.75rem;
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }
  
  .content-item a {
    flex: 1;
  }
  
  .content-year {
    color: var(--text-muted);
    font-size: 0.9rem;
    font-weight: 400;
    min-width: 3rem;
    text-align: right;
  }
  
  /* Footer */
  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border-light);
    position: relative;
  }
  
  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary), var(--accent-tertiary));
  }
  
  .subscribe-link {
    color: var(--accent-danger);
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  
  .subscribe-link:hover {
    background: var(--accent-danger);
    color: var(--text-on-dark);
    border-bottom-color: transparent;
    box-shadow: 0 4px 12px rgba(142, 0, 38, 0.3);
  }
  
  /* Responsive design */
  @media (max-width: 640px) {
    .container {
      padding: 1.5rem 1rem;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .content-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .content-year {
      text-align: left;
      min-width: auto;
    }
    
    .product-grid {
      gap: 1.5rem;
    }
    
    .product-card {
      padding: 1.25rem;
    }
    
    .product-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
    
    .product-status {
      align-self: flex-start;
    }
  }
  
  /* Performance optimizations */
  img {
    max-width: 100%;
    height: auto;
  }
  
  /* Accessibility improvements */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  /* Smooth scrolling */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }
  
  /* Blog Styles - Franco Maria Ricci Inspired */
  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--border-light);
    position: relative;
  }
  
  .blog-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--blog-bronze), transparent);
  }
  
  .blog-subtitle {
    font-size: 1.125rem;
    color: var(--blog-sepia);
    font-style: italic;
    max-width: 600px;
    margin: 1rem auto 0;
    line-height: 1.6;
  }
  
  .featured-section {
    margin-bottom: 4rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2.5rem;
    margin-top: 2rem;
  }
  
  .featured-article {
    background: var(--blog-parchment);
    padding: 2.5rem;
    border-radius: 0;
    border: 1px solid var(--border-light);
    position: relative;
    transition: all 0.3s ease;
  }
  
  .featured-article::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--blog-bronze);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .featured-article:hover::before {
    transform: scaleX(1);
  }
  
  .featured-article:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(112, 66, 20, 0.15);
  }
  
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .article-card {
    background: var(--blog-warm-white);
    padding: 2rem;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .article-card:hover {
    border-color: var(--blog-bronze);
    box-shadow: 0 4px 16px rgba(205, 127, 50, 0.1);
  }
  
  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  
  .article-category {
    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    padding: 0.25rem 0.75rem;
    border-radius: 0;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    font-size: 0.75rem;
  }
  
  .article-date {
    color: var(--blog-bronze);
    font-weight: 500;
    font-family: 'Georgia', serif;
  }
  
  .article-title {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    line-height: 1.4;
  }
  
  .article-title a {
    color: var(--blog-charcoal);
    text-decoration: none;
    font-weight: 600;
    font-family: 'Georgia', serif;
    transition: color 0.3s ease;
  }
  
  .article-title a:hover {
    color: var(--blog-bronze);
    border-bottom: none;
  }
  
  .article-excerpt {
    color: var(--blog-sepia);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .tag {
    background: transparent;
    color: var(--blog-bronze);
    border: 1px solid var(--blog-bronze);
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3px;
    transition: all 0.2s ease;
  }
  
  .tag:hover {
    background: var(--blog-bronze);
    color: var(--blog-warm-white);
  }
  
  .reading-time {
    color: var(--blog-muted-gold);
    font-size: 0.875rem;
    font-style: italic;
  }
  
  .blog-sidebar {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);
  }
  
  .newsletter-signup {
    background: var(--blog-parchment);
    padding: 2rem;
    text-align: center;
    border: 1px solid var(--border-light);
    max-width: 500px;
    margin: 0 auto;
  }
  
  .newsletter-signup h3 {
    color: var(--blog-charcoal);
    margin-bottom: 1rem;
    font-family: 'Georgia', serif;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin: 1.5rem 0;
  }
  
  .newsletter-form input {
    flex: 1;
    padding: 0.75rem;
    border: 2px solid var(--border-medium);
    background: var(--blog-warm-white);
    font-size: 0.875rem;
    transition: border-color 0.3s ease;
  }
  
  .newsletter-form input:focus {
    outline: none;
    border-color: var(--blog-bronze);
  }
  
  .newsletter-form button {
    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .newsletter-form button:hover {
    background: var(--blog-bronze);
  }
  
  .newsletter-actions {
    text-align: center;
  }
  
  .subscribe-cta {
    display: inline-block;
    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    font-size: 0.9rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
    border: 2px solid var(--blog-sepia);
  }
  
  .subscribe-cta:hover {
    background: var(--blog-bronze);
    border-color: var(--blog-bronze);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(205, 127, 50, 0.3);
  }
  
  .newsletter-note {
    font-size: 0.875rem;
    color: var(--blog-sepia);
    margin-top: 1rem;
  }
  
  .rss-link {
    color: var(--accent-primary);
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    background: rgba(212, 175, 55, 0.1);
    border-radius: 4px;
    text-decoration: none;
    border-bottom: 2px solid var(--accent-primary);
    transition: all 0.3s ease;
  }
  
  .rss-link:hover {
    background: var(--accent-primary);
    color: var(--text-on-dark);
    border-bottom-color: var(--accent-primary);
    transform: translateY(-1px);
  }
  
  /* Homepage Blog Preview */
  .blog-preview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }
  
  .blog-preview-card {
    background: var(--blog-parchment);
    padding: 2rem;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
    position: relative;
    cursor: pointer;
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .blog-preview-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--blog-bronze), var(--blog-sepia));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .blog-preview-card:hover::before {
    transform: scaleX(1);
  }
  
  .blog-preview-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(205, 127, 50, 0.2);
    border-color: var(--blog-bronze);
  }
  
  .blog-preview-card:hover .blog-title a {
    color: var(--blog-bronze);
  }
  
  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  
  .blog-category {
    background: var(--blog-sepia);
    color: var(--blog-warm-white);
    padding: 0.2rem 0.6rem;
    font-weight: 600;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    font-size: 0.7rem;
  }
  
  .blog-date {
    color: var(--blog-bronze);
    font-weight: 500;
    font-family: 'Georgia', serif;
    font-size: 0.8rem;
  }
  
  .blog-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.1rem;
    line-height: 1.3;
    color: var(--blog-charcoal);
    font-weight: 600;
    font-family: 'Georgia', serif;
    transition: color 0.3s ease;
  }
  
  .blog-reading-time {
    color: var(--blog-muted-gold);
    font-size: 0.8rem;
    font-style: italic;
    margin-top: 0.75rem;
  }
  
  .blog-excerpt {
    color: var(--blog-sepia);
    line-height: 1.5;
    font-size: 0.9rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-cta {
    text-align: center;

{
  "name": "avalidurl-website",
  "description": "A modern, minimalist blog website built with Astro, featuring a comprehensive Substack content import system",
  "version": "1.0.0",
  "type": "module",
  "author": "Gokhan Turhan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avalidurl/avalidurl-website.git"
  },
  "homepage": "https://github.com/avalidurl/avalidurl-website#readme",
  "bugs": {
    "url": "https://github.com/avalidurl/avalidurl-website/issues"
  },
  "keywords": [
    "astro",
    "blog",
    "substack",
    "content-migration",
    "static-site",
    "markdown",
    "seo",
    "minimalist",
    "responsive",
    "import-tool"
  ],
  "scripts": {
    "dev": "tinacms dev -c \"astro dev\"",
    "dev:astro": "astro dev",
    "start": "astro dev",
    "build": "npm run build:deps && tinacms build && astro build",
    "build:deps": "npm rebuild rollup || echo 'Rollup rebuild failed, continuing...'",
    "preview": "astro preview",
    "astro": "astro",
    "import-substack": "node scripts/comprehensive-substack-importer.cjs",
    "fix-frontmatter": "node scripts/fix-frontmatter.cjs",
    "check-yaml": "node scripts/check-yaml.cjs",
    "fix-markdown": "node scripts/fix-broken-markdown.cjs",
    "lint": "astro check",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/rss": "^4.0.12",
    "@tinacms/auth": "^1.1.0",
    "@tinacms/cli": "^1.10.1",
    "@tinacms/datalayer": "^1.4.0",
    "astro": "^5.0.0",
    "astro-embed": "^0.9.0",
    "sharp": "^0.34.3",
    "tinacms": "^2.8.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.45.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
